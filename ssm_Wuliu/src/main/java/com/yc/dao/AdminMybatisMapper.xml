<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.yc.dao.AdminMybatisMapper">
 	<!-- 使用二级缓存 -->
 	<cache
 		eviction="FIFO"
 		flushInterval="60000"
 		size="512"
 		readOnly="true" />
 	
 	<!-- 根据用户名和密码查询管理员 -->
 	<select id="getAdminByLogin" resultType="Admin" parameterType="Admin">
 		select * from admin where aname=#{aname} and apwd=#{apwd}
 	</select>
 	
 	
 	<!-- 查询所有管理员 -->
	<select id="searchAllAdmin0" resultType="Admin" parameterType="map">
		select * from users where status=1
	</select>
	
	
</mapper>